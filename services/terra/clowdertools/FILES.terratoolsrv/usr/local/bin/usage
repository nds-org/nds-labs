#!/bin/bash

usage-docker() {
    echo -n 'docker run -d -p 8080:8080 --name terratoolsrv -v /var/run/docker.sock:/var/run/docker.sock terratoolsrv terratoolsrv'
}

usage() {
    echo "This image generates the command to run itself using the following commands:"
    echo '  docker run --rm -t terratoolsrv usage docker'
    echo '  To deploy in this environment:'
    echo '      eval $(docker run --rm -it terratoolsrv usage docker)'

}

case $1 in
    "docker" )
        usage-docker
        ;;
    *)
        usage
        ;;
esac
