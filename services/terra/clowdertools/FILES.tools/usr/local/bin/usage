#!/bin/bash

usage-docker() {
    echo -n 'docker run -d -p 8888:8888 tool-${TOOL_NAME}'
}

usage() {
    echo "This image generates the command to run itself using the following commands:"
    echo '  docker run --rm -t tool-${TOOL_NAME} usage docker'
    echo '  To deploy in this environment:'
    echo '      eval $(docker run --rm -it tool-${TOOL_NAME} usage docker)'

}

case $1 in
    "docker" )
        usage-docker
        ;;
    *)
        usage
        ;;
esac
