#!/bin/bash

usage-docker() {
    echo -n 'docker run --rm -it -v /var/run/docker.sock:/var/run/docker.sock --net=host ndsdev bash'
}

usage() {
    echo "This image produces the command to run itself in the following environments:"
    echo -n 'eval $(docker run --rm -t ndsdev usage docker)'
    
}

case $1 in
    "docker" )
        usage-docker
        ;;
    *)
        usage
        ;;
esac
